<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background = "@drawable/background"
    tools:context="com.example.admin.memorygame.LevelsActivity">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/select_level"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="65dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/level1Btn_lev"
        android:background="@drawable/level1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/level2Btn_lev"
        android:layout_toStartOf="@+id/level2Btn_lev" />

    <Button
        android:id="@+id/level2Btn_lev"
        android:background="@drawable/level2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/level1Btn_lev"
        android:layout_centerHorizontal="true"
        android:clickable="true"/>

    <Button
        android:id="@+id/level3Btn_lev"
        android:background="@drawable/level3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:clickable="true"
        android:layout_alignTop="@+id/level2Btn_lev"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/level2Btn_lev"
        android:layout_toEndOf="@+id/level2Btn_lev" />

</RelativeLayout>
